<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="OrderForm.MainWindow"
        mc:Ignorable="d"
        Title="OrderRegistration" Height="1000" Width="1800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F5F5F5">
    <Grid RenderTransformOrigin="0.5,0.5" Margin="0,0,-6,0">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="-0.312"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Order Summary -->
        <StackPanel Grid.Row="0" Margin="20,20,1612,20">
            <TextBlock FontSize="24" FontWeight="Bold" Width="150">Корзина</TextBlock>
            <TextBlock Margin="10" FontWeight="Bold">Сумма: 22 900 р.</TextBlock>
            <TextBlock FontWeight="Bold" Width="146" Height="44"><Run Text="Доставка: 0 р."/></TextBlock>
            <TextBlock Margin="10" FontWeight="Bold">Итого: 22 900 р.</TextBlock>
        </StackPanel>

        <!-- Product Details -->
        <StackPanel Grid.Row="1" Margin="330,20,1228,20" Background="#FFE8EAC8">
            <TextBlock FontSize="18" FontWeight="Bold">Jacket4</TextBlock>
            <TextBlock Margin="10">Цена:</TextBlock>
            <TextBlock Margin="10">Артикул:</TextBlock>
            <TextBlock Margin="10">Бренд:</TextBlock>
            <TextBlock Margin="10">Раздел:</TextBlock>
        </StackPanel>

        <!-- Personal Details -->
        <StackPanel Grid.Row="2" Margin="20">
            <TextBlock FontSize="18" FontWeight="Bold">Personal Details</TextBlock>
            <TextBlock Margin="10">Имя: [Имя]</TextBlock>
            <TextBlock Margin="10">Размер: m</TextBlock>
        </StackPanel>

        <!-- Delivery Address -->
        <StackPanel Margin="1177,103,319,61" Grid.RowSpan="2">
            <TextBlock FontSize="18" FontWeight="Bold">Delivery Address</TextBlock>
            <TextBlock Margin="10">Фамилия: [Фамилия]</TextBlock>
            <TextBlock Margin="10">Область: [Область]</TextBlock>
            <TextBlock Margin="10">Город: [Город]</TextBlock>
            <TextBlock Margin="10">Телефон: [Телефон]</TextBlock>
            <TextBlock Margin="10">E-mail: [email@email.com]</TextBlock>
        </StackPanel>

        <!-- Payment Methods -->
        <StackPanel Margin="739,28,79,153" Grid.RowSpan="2" Grid.Row="2">
            <TextBlock FontSize="18" FontWeight="Bold">Payment Methods</TextBlock>
            <RadioButton Margin="10" Content="Online на сайте"/>
            <RadioButton Margin="10" Content="Картой при получении"/>
            <RadioButton Margin="10" Content="Наличными при получении"/>
            <RadioButton Margin="10" Content="Яндекс Сплит оплата частями"/>
            <RadioButton Margin="10" Content="Долями оплата частями"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Margin="1291,199,121,112" Orientation="Horizontal" Grid.RowSpan="2">
            <Button Content="Оформить заказ" Margin="10"/>
            <Button Content="Оплатить с я Пэй" Margin="10"/>
        </StackPanel>
        <ui:Image Source="/Resources/Jacket4.jpg" HorizontalAlignment="Left" Margin="19,5,0,0" Grid.Row="1" VerticalAlignment="Top" Height="290" Width="301"/>
        <TextBlock Margin="382,54,1352,222" Grid.Row="1" FontWeight="Bold"><Run Text="22.000 р."/></TextBlock>
        <TextBlock Margin="401,93,1306,183" Grid.Row="1" FontWeight="Bold"><Run Text="DFGH5476KG"/></TextBlock>
        <TextBlock Margin="388,132,1332,144" Grid.Row="1" FontWeight="Bold"><Run Text="Stone Island"/></TextBlock>
        <TextBlock Margin="391,170,1353,106" Grid.Row="1" FontWeight="Bold"><Run Text="Куртки"/></TextBlock>
    </Grid>
</Window>