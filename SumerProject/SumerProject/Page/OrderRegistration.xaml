<Window 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" x:Class="OrderForm.MainWindow" 
    mc:Ignorable="d" 
    Title="OrderRegistration" Height="856" Width="1250" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F5F5F5">
    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Ваша корзина для оформления заказа:" Margin="10" FontSize="24" FontWeight="Bold"/>

        <!-- Логотип -->
        <Image Source="/Resources/Logo1.png" HorizontalAlignment="Left" Height="57" Margin="1112,-6,0,0" VerticalAlignment="Top" Width="94"/>

        <!-- Список товаров -->
        <ScrollViewer Grid.Row="1" Margin="0,10">
            <StackPanel Orientation="Horizontal">
                <!-- Первый товар -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="0 10 10 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/Resources/Jacket3.jpg" Width="150" Height="150" Stretch="Uniform"/>
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="Куртка" FontWeight="Bold" FontSize="20"/>
                            <TextBlock Text="13.000 ₽" Margin="0,5,0,0" FontSize="16"/>
                        </StackPanel>
                        <Button Grid.Column="2" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="16" Content="❌" Background="#F8F32B" FontWeight="Bold" RenderTransformOrigin="0.5,0.5"/>
                    </Grid>
                </Border>

                <!-- Второй товар -->
                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="0 10 10 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/Resources/Jeans1.jpg" Width="150" Height="150" Stretch="Uniform" Margin="-8,-7,8,7"/>
                        <StackPanel Grid.Column="1" Margin="10">
                            <TextBlock Text="Джинсы" FontWeight="Bold" FontSize="20"/>
                            <TextBlock Text="10.000₽" Margin="0,5,0,0" FontSize="16"/>
                        </StackPanel>
                        <Button Grid.Column="2" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top" FontSize="16" Content="❌" Background="#F8F32B" FontWeight="Bold" RenderTransformOrigin="0.5,0.5">
                            <Button.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-0.532"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Button.RenderTransform>
                            <Button.BorderBrush>
                                <LinearGradientBrush EndPoint="0,3" MappingMode="Absolute">
                                    <LinearGradientBrush.RelativeTransform>
                                        <ScaleTransform CenterY="0.5" ScaleY="-1"/>
                                    </LinearGradientBrush.RelativeTransform>
                                    <GradientStop Color="#29000000"/>
                                    <GradientStop Color="#0F000000" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.BorderBrush>
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Раздел личных данных -->
        <Border Grid.Row="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="0,10" Background="White">
            <StackPanel Margin="10">
                <TextBlock Text="Личные данные" FontSize="18" FontWeight="Bold" Margin="0 0 10 10"/>
                <TextBox Margin="0 0 0 10" Text="ФИО" Padding="5" Background="#FFE2E2E2"/>
                <TextBox Margin="0 0 0 10" Text="Адрес доставки" Padding="5" Background="#FFE2E2E2"/>
                <TextBox Margin="0 0 0 10" Text="Город" Padding="5" Background="#FFE2E2E2"/>
                <TextBox Margin="0 0 0 10" Text="Телефон" Padding="5" Background="#FFE2E2E2"/>
                <TextBox Margin="0 0 0 10" Text="Почтовый индекс" Padding="5" Background="#FFE2E2E2"/>
            </StackPanel>
        </Border>

        <!-- Раздел платежной информации -->
        <Border Grid.Row="3" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="0,10" Background="White">
            <StackPanel Margin="10">
                <TextBlock Text="Платежная информация" FontSize="18" FontWeight="Bold" Margin="0 0 10 10"/>
                <TextBox Margin="0 0 0 10" Text="Номер карты" Padding="5" Background="#FFE2E2E2">
                    <TextBox.BorderBrush>
                        <LinearGradientBrush EndPoint="0,2" MappingMode="Absolute">
                            <LinearGradientBrush.RelativeTransform>
                                <ScaleTransform CenterY="0.5" ScaleY="-1"/>
                            </LinearGradientBrush.RelativeTransform>
                            <GradientStop Color="#72000000"/>
                            <GradientStop Color="#0F000000" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBox.BorderBrush>
                </TextBox>
                <TextBox Margin="0 0 0 10" Text="Имя владельца" Background="#FFE2E2E2" Padding="5"/>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBox Width="308" Text="MM/ГГ" Background="#FFE2E2E2" Padding="5"/>
                    <TextBox Width="338" Text="CVV" Background="#FFE2E2E2" Padding="5"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Кнопка Оформить заказ -->
        <Button Grid.Row="4" Content="Оформить заказ" HorizontalAlignment="Center" Margin="0,10" Width="200" Height="40" Background="#F8F32B" BorderBrush="Black" FontWeight="Bold" BorderThickness="2" FontSize="16" Padding="10"/>
    </Grid>
</Window>