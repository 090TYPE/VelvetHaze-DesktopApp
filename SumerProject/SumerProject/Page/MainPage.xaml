        xmlns:local="clr-namespace:SumerProject.Page"
        xmlns:modern="http://schemas.modernwpf.com/2019" 
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Главная страница"
        Height="665" Width="1200">
    <Grid>
        <ScrollViewer VerticalAlignment="Center">
            <Grid Margin="0,0,0,5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="464*"/>
                    <RowDefinition Height="265*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="251*"/>
                    <ColumnDefinition Width="949*"/>
                </Grid.ColumnDefinitions>
                <Button Background="White" BorderBrush="White" Content="Личный кабинет" Margin="81,20,0,0" VerticalAlignment="Top" Grid.Column="2" MouseDoubleClick="Label_MouseDoubleClick" FontSize="14" Height="30"/>
