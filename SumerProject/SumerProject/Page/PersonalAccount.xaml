<Window
    x:Class="SumerProject.Page.PersonalAccount"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:easy="clr-namespace:EasyCaptcha.Wpf;assembly=EasyCaptcha.Wpf"
    xmlns:local="clr-namespace:SumerProject.Page"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modern="http://schemas.modernwpf.com/2019"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Личный кабинет"
    Width="800"
    Height="450"
    Background="#1F1F1F"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Margin="7,6,0,6"
            Background="White" />

        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Margin="15,9,9,10"
            Background="White"
            Orientation="Vertical">

            <Image
                Width="174"
                Height="100"
                Source="/Resources/Logo1.png"
                Stretch="UniformToFill" />
            <Image x:Name="UserImage" Width="100" Height="100" Stretch="Uniform">
                <Image.Clip>
                    <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50"/>
                </Image.Clip>
            </Image>
            <StackPanel Margin="0,20,0,0" HorizontalAlignment="Center">
                <TextBlock
                    x:Name="FirstNameTextBlock"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Black" />

                <TextBlock
                    x:Name="LastNameTextBlock"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Black" />

                <TextBlock
                    x:Name="PhoneNumberTextBlock"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="Black" />
            </StackPanel>

            <Button
                Margin="0,0,0,100"
                Padding="10,5"
                HorizontalAlignment="Center"
                Background="#F8F32B"
                BorderBrush="Black"
                Click="Back_Click"
                Content="Выйти"
                FontSize="14"
                FontWeight="Bold"
                Foreground="Black" />

        </StackPanel>

        <Grid
            Grid.RowSpan="2"
            Grid.Column="1"
            Margin="6,6,6,6"
            Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="14,8,-14,12"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#1F1F1F"
                Text="Заказы" />

            <ListView x:Name="OrdersListView"
          Grid.RowSpan="2"
          Grid.Column="0"
          Grid.ColumnSpan="2"
          Margin="12,43,12,46"
          Padding="10"
          Background="#F8F32B"
          BorderBrush="#1F1F1F"
          Foreground="Black">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Заказ #" DisplayMemberBinding="{Binding OrderID}" Width="150"/>
                        <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding OrderDate}" Width="200"/>
                        <GridViewColumn Header="Сумма" DisplayMemberBinding="{Binding TotalAmount}" Width="150"/>
                        <GridViewColumn Header="Адрес" DisplayMemberBinding="{Binding ShippingAddress}" Width="250"/>
                        <GridViewColumn Header="Город" DisplayMemberBinding="{Binding City}" Width="150"/>
                        <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding PhoneNumber}" Width="150"/>
                        <GridViewColumn Header="Почтовый индекс" DisplayMemberBinding="{Binding PostalCode}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,175,197,66"
                Background="Transparent"
                Orientation="Vertical" />

        </Grid>

    </Grid>
</Window>
